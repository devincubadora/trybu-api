// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  username  String?   @unique
  email     String    @unique
  phone     String?   @unique
  whatsapp  String?   @unique
  password  String
  createdAt DateTime?
  updatedAt DateTime?

  events     Event[]
  forumPosts ForumPost[]
}

model Event {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  picture     String?
  startsAt    DateTime
  endsAt      DateTime?
  address     String
  price       Float?
  contact     String?
  status      String?
  description String?
  authorId    String    @db.ObjectId
  createdAt   DateTime
  updatedAt   DateTime?

  author User @relation(fields: [authorId], references: [id])
}

model ForumPost {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  picture   String?
  status    String?
  content   String?
  authorId  String    @db.ObjectId
  createdAt DateTime
  updatedAt DateTime?

  author User @relation(fields: [authorId], references: [id])
}
