generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  // id        Int       @id @default(autoincrement())
  name      String
  username  String?   @unique
  email     String    @unique
  phone     String?   @unique
  whatsapp  String?   @unique
  password  String
  createdAt DateTime?
  updatedAt DateTime?

  events Event[]
}

model Event {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  picture     String?
  startTime   DateTime
  endTime     DateTime?
  address     String
  price       Float?
  contact     String?
  description String?
  authorId    String    @map("authorId") @db.ObjectId
  createdAt   DateTime
  updatedAt   DateTime?

  user User @relation(fields: [authorId], references: [id])
}
